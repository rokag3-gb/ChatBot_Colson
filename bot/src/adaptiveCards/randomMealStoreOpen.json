{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "오늘의 점심 메뉴는!! 뽑기 결과를 확인해 보세요",
      "size": "Medium",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "식사 맛있게 하세요",
      "wrap": true
    },
    {
      "type": "Container",
      "id": "storeResult",
      "isVisible": false,
      "bleed": true,
      "items": [
        {
          "type": "ColumnSet",
          "bleed": true,
          "columns": [
            {
              "type": "Column",
              "width": 4,
              "separator": true,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "horizontalAlignment": "center",
                      "text": "상호",
                      "size": "small"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "width": 8,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "horizontalAlignment": "center",
                      "text": "주소",
                      "size": "small"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "width": 3,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "horizontalAlignment": "center",
                      "text": "분류",
                      "size": "small"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "width": 2,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "text": "링크",
                      "size": "small"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.ToggleVisibility",
      "title": "확인하기",
      "targetElements": [ "storeResult" ]
    }
  ]
}