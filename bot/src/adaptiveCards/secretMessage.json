{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "backgroundImage": "http://contents.pauline.or.kr/data/editor/1705/0efbf43a35fcf62b5c93122c4d347957_1494506508_5016.jpg",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "${title}",
      "size": "large",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "isSubtle": true,
      "text": "-------------------------"
    },
    {
      "type": "TextBlock",
      "weight": "Bolder",
      "text": "${body}"
    },
    {
      "type": "TextBlock",
      "isSubtle": true,
      "text": "-------------------------"
    }
  ],
  "actions": [
  ]
}