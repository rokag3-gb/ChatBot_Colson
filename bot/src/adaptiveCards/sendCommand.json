{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "${title}",
      "size": "small",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${body}",
      "isSubtle": true,
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "근무지 조회",
      "data": {
        "messageType": "getworkplace"
      }
    },
    {
      "type": "Action.Submit",
      "title": "근무지 등록",
      "data": {
        "messageType": "insertworkplace"
      }
    },
    {
      "type": "Action.Submit",
      "title": "메시지 전달",
      "data": {
        "messageType": "viewSecretMessage"
      }
    }
  ]
}