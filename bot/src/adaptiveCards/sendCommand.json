{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "${title}",
      "size": "small",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${body}",
      "isSubtle": true,
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "근무지 조회",
      "verb": "getWorkplaceForm",
      "fallback": "Action.Submit"
    },
    {
      "type": "Action.Execute",
      "title": "근무지 등록",
      "verb": "setWorkplaceForm",
      "fallback": "Action.Submit"
    },
    {
      "type": "Action.Execute",
      "title": "메시지 전달",
      "verb": "viewSecretMessage",
      "fallback": "Action.Submit"
    }
  ]
}