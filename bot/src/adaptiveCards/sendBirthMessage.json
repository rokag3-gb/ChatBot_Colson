  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "minHeight": "20px",
      "items": [
      ]
    },
    {
      "type": "TextBlock",
      "text": "${title}",
      "color": "dark",
      "weight": "Bolder",
      "horizontalAlignment": "center",
      "wrap": true
    },
    {
      "type": "Container",
      "minHeight": "20px",
      "items": [
      ]
    },
    {
      "type": "TextBlock",
      "color": "dark",
