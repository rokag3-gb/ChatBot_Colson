{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "근무지 등록",
      "size": "Large",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${body} 님의 근무지를 등록합니다.",
      "isSubtle": true,
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "UPN",
      "label": "이름",
      "style": "compact",
      "placeholder": "근무지를 등록할 분을 선택해 주세요.",
      "errorMessage": "근무지를 등록할 분을 선택해 주세요.",
      "isRequired": true,
      "isVisible": false,
      "choices": [
      ]
    },
    {
      "type": "Input.Date",
      "label": "날짜",
      "isRequired": true,
      "id": "WorkDate",
      "placeholder": "Enter a date",
      "min": "2017-10-12",
      "max": "2017-10-12",
      "value": "2017-10-12"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "WorkCodeAM",
      "label": "오전 업무 근무지",
      "style": "compact",
      "placeholder": "근무지를 선택해 주세요.",
      "errorMessage": "근무지를 선택해 주세요.",
      "isRequired": true,
      "choices": [
      ]
    },
    {
      "type": "Input.ChoiceSet",
      "id": "WorkCodePM",
      "label": "오후 업무 근무지",
      "style": "compact",
      "placeholder": "근무지를 선택해 주세요.",
      "errorMessage": "근무지를 선택해 주세요.",
      "isRequired": true,
      "choices": [
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "OK",
      "data": {
        "messageType": "insertWorkplace"
      }
    }
  ]
}