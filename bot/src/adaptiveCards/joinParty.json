{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "식사 모임 참가",
      "size": "Medium",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "식사 모임 참가를 원하시면 참가 버튼을 눌러주세요!",
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "spacing": "Medium",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "제목",
              "size": "small",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": 5,
          "items": [
            {
              "type": "TextBlock",
              "text": "${partyTitle}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Medium",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "현재 참가 인원",
              "size": "small",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": 5,
          "items": [
            {
              "type": "TextBlock",
              "text": "${numberOfPeaple}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Medium",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "방장 닉네임",
              "size": "small",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": 5,
          "items": [
            {
              "type": "TextBlock",
              "text": "${nickname}",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "spacing": "large",
      "text": "설명",
      "size": "small",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "color": "dark",
      "text": "${message}",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "style": "text",
      "isMultiline": false,
      "isVisible": false,
      "id": "partyId",
      "value": "${partyId}"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "참가",
      "data": {
        "messageType": "requestJoinParty"
      }
    }
  ]
}