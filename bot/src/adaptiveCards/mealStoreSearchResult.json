{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "비플식권페이 가맹점 조회",
      "size": "Medium",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${storeNameText}",
      "wrap": true
    },
    {
      "type": "Container",
      "id": "storeResult",
      "isVisible": false,
      "bleed": true,
      "items": [
        {
          "type": "ColumnSet",
          "bleed": true,
          "columns": [
            {
              "type": "Column",
              "width": 4,
              "separator": true,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "horizontalAlignment": "center",
                      "text": "상호",
                      "size": "small"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "width": 8,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "horizontalAlignment": "center",
                      "text": "주소",
                      "size": "small"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "width": 3,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "horizontalAlignment": "center",
                      "text": "분류",
                      "size": "small"
                    }
                  ]
                }
              ]
            },
            {
              "type": "Column",
              "separator": true,
              "width": 2,
              "bleed": true,
              "spacing": "none",
              "items": [
                {
                  "type": "Container",
                  "style": "accent",
                  "bleed": true,
                  "items": [
                    {
                      "type": "TextBlock",
                      "weight": "bolder",
                      "text": "링크",
                      "size": "small"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "원하시는 결과가 없으신가요?",
      "isSubtle": true,
      "size": "small",
      "spacing": "extraLarge",
      "wrap": true
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "식당 등록 요청하기",
      "url": "https://forms.office.com/r/aBXTL8GbsZ"
    },
    {
      "type": "Action.ToggleVisibility",
      "title": "펼치기",
      "targetElements": [ "storeResult" ]
    }
  ]
}