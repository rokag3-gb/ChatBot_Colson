{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "비플 지정가맹점 조회",
      "size": "Medium",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${storeName}을 포함한 지점가맹점을 조회하였습니다.",
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "separator": true,
          "spacing": "none",
          "items": [
            {
              "type": "Container",
              "style": "accent",
              "items": [
                {
                  "type": "TextBlock",
                  "weight": "bolder",
                  "horizontalAlignment": "center",
                  "text": "가맹점명",
                  "size": "small"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "separator": true,
          "width": 4,
          "spacing": "none",
          "items": [
            {
              "type": "Container",
              "style": "accent",
              "items": [
                {
                  "type": "TextBlock",
                  "weight": "bolder",
                  "horizontalAlignment": "center",
                  "text": "주소",
                  "size": "small"
                }
              ]
            }
          ]
        },
        {
          "type": "Column",
          "separator": true,
          "width": 2,
          "spacing": "none",
          "items": [
            {
              "type": "Container",
              "style": "accent",
              "items": [
                {
                  "type": "TextBlock",
                  "weight": "bolder",
                  "horizontalAlignment": "center",
                  "text": "카테고리",
                  "size": "small"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "actions": [
  ]
}