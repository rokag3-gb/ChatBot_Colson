{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "backgroundImage": "http://contents.pauline.or.kr/data/editor/1705/0efbf43a35fcf62b5c93122c4d347957_1494506508_5016.jpg",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "${title}",
      "size": "large",
      "color": "dark",
      "wrap": true
    },
    {
      "type": "Container",
      "minHeight": "120px",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "color": "dark",
          "text": "${body}",
          "wrap": true
        }
      ]
    },
    {
      "type": "TextBlock",
      "isSubtle": true,
      "color": "dark",
      "size": "small",
      "text": "이 메시지에 반응 하면 발신자에게 전달됩니다.",
      "wrap": true
    }
  ],
  "actions": [
  ]
}