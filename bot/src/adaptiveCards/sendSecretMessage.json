{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "backgroundImage": "https://i.pinimg.com/736x/44/48/d1/4448d11ef5f412dec8698b2c687a886b.jpg",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "메시지를 전송합니다.",
      "size": "small",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "label": "발신",
      "style": "text",
      "id": "senderNick",
      "isRequired": true,
      "errorMessage": "발신자 이름을 적어주세요"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "receiver",
      "label": "수신",
      "style": "compact",
      "errorMessage": "받으실분을 선택해 주세요.",
      "isRequired": true,
      "value": null,
      "choices": [
      ]
    },
    {
      "type": "Input.Text",
      "label": "내용",
      "style": "text",
      "isMultiline": true,
      "id": "message"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "메시지 전달",
      "verb": "sendSecretMessage",
      "fallback": "Action.Submit"
    }
  ]
}