{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "backgroundImage": "https://i.pinimg.com/736x/44/48/d1/4448d11ef5f412dec8698b2c687a886b.jpg",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "익명 메시지",
      "size": "Large",
      "color": "dark",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "발신자 이름",
      "color": "dark",
      "size": "small",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "style": "text",
      "id": "senderNick",
      "isRequired": true,
      "errorMessage": "보내시는 분 이름을 적어주세요"
    },
    {
      "type": "TextBlock",
      "text": "수신자 이름",
      "color": "dark",
      "size": "small",
      "weight": "Bolder"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "receiver",
      "style": "compact",
      "errorMessage": "받으실분을 선택해 주세요.",
      "isRequired": true,
      "value": null,
      "choices": [
      ]
    },
    {
      "type": "TextBlock",
      "text": "내용",
      "color": "dark",
      "size": "default",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "style": "text",
      "isMultiline": true,
      "id": "message"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "익명 메시지",
      "data": {
        "messageType": "sendSecretMessage"
      }
    }
  ]
}