{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "오늘의 메시지를 작성해주세요!",
      "size": "Medium",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "콜슨이 대신 전해드립니다!",
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "spacing": "Medium",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "보내는 사람",
              "size": "small",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": 5,
          "items": [
            {
              "type": "Input.Text",
              "style": "text",
              "id": "senderNick",
              "isRequired": true,
              "value": "${senderNick}",
              "errorMessage": "보내시는 분 이름을 적어주세요."
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Medium",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "받는 사람",
              "size": "small",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": 5,
          "items": [
            {
              "type": "Input.ChoiceSet",
              "id": "receiver",
              "style": "compact",
              "errorMessage": "받으실분을 선택해 주세요.",
              "isRequired": true,
              "value": "${receiver}",
              "choices": [
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "spacing": "Medium",
      "columns": [
        {
          "type": "Column",
          "width": 2,
          "verticalContentAlignment": "center",
          "items": [
            {
              "type": "TextBlock",
              "text": "배경 이미지 선택",
              "wrap": true,
              "size": "small",
              "weight": "Bolder"
            }
          ]
        },
        {
          "type": "Column",
          "width": 5,
          "items": [
            {
              "type": "Input.ChoiceSet",
              "id": "background",
              "style": "compact",
              "isMultiSelect": false,
              "isRequired": true,
              "value": "${backgroundImage01}",
              "errorMessage": "배경 이미지를 선택해 주세요.",
              "choices": [
                {
                  "title": "${iconName1}",
                  "value": "${backgroundImage01}"
                },
                {
                  "title": "${iconName2}",
                  "value": "${backgroundImage02}"
                },
                {
                  "title": "${iconName3}",
                  "value": "${backgroundImage03}"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
                "type": "Image",
                "url": "data:image/jpeg;base64,${icon1}",
                "style": "person",
                "width": "50px",
                "height": "50px",
                "horizontalAlignment": "center"
            },
            {
                "type": "TextBlock",
                "text": "${iconName1}",
                "horizontalAlignment": "center"
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
                "type": "Image",
                "url": "data:image/jpeg;base64,${icon2}",
                "style": "person",
                "width": "50px",
                "height": "50px",
                "horizontalAlignment": "center"
            },
            {
                "type": "TextBlock",
                "text": "${iconName2}",
                "horizontalAlignment": "center"
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
                "type": "Image",
                "url": "data:image/jpeg;base64,${icon3}",
                "style": "person",
                "width": "50px",
                "height": "50px",
                "horizontalAlignment": "center"
            },
            {
                "type": "TextBlock",
                "text": "${iconName3}",
                "horizontalAlignment": "center"
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "spacing": "large",
      "text": "내용(최대 150자)",
      "size": "small",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "style": "text",
      "isMultiline": true,
      "id": "message",
      "value": "${contents}",
      "maxLength": 150
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "메시지 전송",
      "data": {
        "messageType": "sendSecretMessage"
      }
    }
  ]
}