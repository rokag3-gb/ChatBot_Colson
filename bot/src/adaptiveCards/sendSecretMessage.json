{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "backgroundImage": "data:image/jpeg;base64,${Background}",
  "version": "1.4",
  "body": [
    {
      "type": "TextBlock",
      "text": "익명 메시지",
      "size": "Large",
      "color": "dark",
      "weight": "Bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "발신자 이름",
      "color": "dark",
      "size": "small",
      "weight": "Bolder"
    },
    {
      "type": "Input.Text",
      "style": "text",
      "id": "senderNick",
      "isRequired": true,
      "errorMessage": "보내시는 분 이름을 적어주세요."
    },
    {
      "type": "TextBlock",
      "text": "수신자 이름",
      "color": "dark",
      "size": "small",
      "weight": "Bolder"
    },
    {
      "type": "Input.ChoiceSet",
      "id": "receiver",
      "style": "compact",
      "errorMessage": "받으실분을 선택해 주세요.",
      "isRequired": true,
      "value": null,
      "choices": [
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
                "type": "TextBlock",
                "text": "${iconName1}",
                "horizontalAlignment": "center",
                "color": "dark"
            },
            {
                "type": "Image",
                "url": "data:image/jpeg;base64,${icon1}",
                "style": "person",
                "width": "50px",
                "height": "50px",
                "horizontalAlignment": "center"
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
                "type": "TextBlock",
                "text": "${iconName2}",
                "horizontalAlignment": "center",
                "color": "dark"
            },
            {
                "type": "Image",
                "url": "data:image/jpeg;base64,${icon2}",
                "style": "person",
                "width": "50px",
                "height": "50px",
                "horizontalAlignment": "center"
            }
          ]
        },
        {
          "type": "Column",
          "items": [
            {
                "type": "TextBlock",
                "text": "${iconName3}",
                "horizontalAlignment": "center",
                "color": "dark"
            },
            {
                "type": "Image",
                "url": "data:image/jpeg;base64,${icon3}",
                "style": "person",
                "width": "50px",
                "height": "50px",
                "horizontalAlignment": "center"
            }
          ]
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "메시지의 배경 이미지를 선택해 주세요",
      "color": "dark",
      "size": "default",
      "wrap": true
    },
    {
      "type": "Input.ChoiceSet",
      "id": "background",
      "style": "compact",
      "isMultiSelect": false,
      "isRequired": true,
      "value": "1",
      "errorMessage": "배경 이미지를 선택해 주세요.",
      "choices": [
        {
          "title": "Cute",
          "value": "${backgroundImage01}"
        },
        {
          "title": "Passion",
          "value": "${backgroundImage02}"
        },
        {
          "title": "Cool",
          "value": "${backgroundImage03}"
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "내용(최대 150자)",
      "color": "dark",
      "size": "default",
      "wrap": true
    },
    {
      "type": "Input.Text",
      "style": "text",
      "isMultiline": true,
      "id": "message",
      "maxLength": 150
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "익명 메시지",
      "data": {
        "messageType": "sendSecretMessage"
      }
    }
  ]
}